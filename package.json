{
  "name": "crosshair",
  "description": "Overlay crosshair on your fullscreen window.",
  "author": "og24715",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "build": {
    "appId": "org.og24715.crosshair",
